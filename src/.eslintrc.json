{
    "root": true,
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "standard" // configuracion predefinida
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    // reglas definidas por el usuario
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "indent": ["error", 2]
    }
}
